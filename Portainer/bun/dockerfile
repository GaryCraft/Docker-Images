# ----------------------
#
#	SpaceProject - Bun Runner
#
# ----------------------

FROM --platform=$TARGETOS/$TARGETARCH node:18-alpine

USER root
# Install dependencies
RUN apk add --no-cache \
	bash \
	curl \
	git \
	openssh-client \
	python3 \
	py3-pip \
	rsync \
	tar \
	unzip \
	wget \
	zip

# Install bun
RUN curl https://bun.sh/install | bash

# Set the working directory
WORKDIR /app

ENTRYPOINT [ "bun" ]
CMD [ "run" ]