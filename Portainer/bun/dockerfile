# ----------------------
#
#	SpaceProject - Bun Runner
#
# ----------------------

FROM --platform=$TARGETOS/$TARGETARCH oven/bun:latest

# Install dependencies
RUN apt-get update && \
	apt-get install -y \
	curl \
	wget \
	git \
	jq \
	libatomic1 \
	nano \
	net-tools \
	netcat \
	sudo

# Set the working directory
WORKDIR /app